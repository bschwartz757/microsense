{
  "name": "client",
  "version": "1.0.0",
  "description": "Mock client application for ItemSense UI Team's take-home project",
  "license": "MIT",
  "author": "Blake Schwartz",
  "main": "public/js/bundle.js",
  "module": "public/js/bundle.es.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "start": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm start\" \"npm run watch\""
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es6": true,
      "browser": true
    },
    "plugins": [],
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "rules": {
      "space-before-function-paren": 0,
      "import/first": 0
    }
  },
  "browserslist": [
    "last 1 version",
    "> 1% in US"
  ],
  "devDependencies": {
    "@fortawesome/fontawesome": "1.1.8",
    "@fortawesome/fontawesome-free-solid": "5.0.13",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "node-sass": "4.11.0",
    "rollup": "^1.2.3",
    "rollup-plugin-alias": "1.5.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-svelte": "^5.0.3",
    "serve": "^10.1.2",
    "svelte": "^2.0.0"
  },
  "dependencies": {
    "concurrently": "4.1.0",
    "bootstrap": "4.3.1",
    "eases-jsnext": "1.0.10",
    "express": "^4.16.4",
    "svelte-transitions": "1.2.0"
  }
}